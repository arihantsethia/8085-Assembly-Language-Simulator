OPCODE MINM &m1,&m2
    LDA &m1
    MOV B, A
    LDA &m2
    CMP B
    JNC smaller
    STA &m1
    HLT
    smaller: MOV A, B
             STA &m1
OPEND

OPCODE MAXM &m1,&m2
    LDA &m1
    MOV B, A
    LDA &m2
    CMP B
    JC greater
    STA &m1
    HLT
    greater: MOV A, B
             STA &m1
OPEND

OPCODE MINMM &m1,&m2,&m3
    LDA &m1
    MOV B, A
    LDA &m2
    MOV D,A
    LDA &m3
    CMP B
    JNC smaller
    CMP D
    JNC smallest
    STA &m1
    HLT
    smaller: MOV A, B
             CMP D
             JNC smallest
             STA &m1
             HLT
    smallest: MOV A, D
              STA &m1
              
OPEND

OPCODE MAXMM &m1,&m2,&m3
    LDA &m1
    MOV B, A
    LDA &m2
    MOV D,A
    LDA &m3
    CMP B
    JC greater
    CMP D
    JC greatest
    STA &m1
    HLT
    greater: MOV A, B
             CMP D
             JC greatest
             STA &m1
             HLT
    greatest: MOV A, D
              STA &m1
OPEND

OPCODE SWP &m1,&m2
    LDA &m1
    MOV B, A 
    LDA &m2
    STA &m1 
    MOV A, B
    STA &m2
OPEND   

OPCODE MUT &m1, &m2
    LXI SP, &m1
    MOV A, D
    PUSH D
    ADDMM &m2, &m2
    POP D
    MOV D, A
OPEND

