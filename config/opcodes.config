OPCODE ADDMM &m1,&m2,&m3
    LXI SP, &m1
    MOV D, A
    PUSH D
    PUSH B
    LDA &m2
    MOV B, A
    LDA &m3
    ADD B
    STA &m2
    POP B
    POP D
    MOV A, D
OPEND

OPCODE ADDMR &m1,&m2
    LXI SP, &m1
    MOV D, A
    PUSH D
    MOV B, A
    LDA &m2
    ADD B
    STA &m2
    POP D
    MOV A, D
OPEND

OPCODE ADDVV &m1,&m2,v1,v2
    LXI SP, &m1
    MOV D, A
    PUSH D
    MVI A, 0
    ADI v1
    ADI v2
    STA &m2
    POP D
    MOV A, D
OPEND

OPCODE ADDVR &m1,&m2,v1
    LXI SP, &m1
    MOV D, A
    PUSH D
    LDA &m2
    ADI v1
    STA &m2
    POP D
    MOV A, D
OPEND

OPCODE SUBMM &m1,&m2,&m3
    LXI SP, &m1
